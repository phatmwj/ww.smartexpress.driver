<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--    https://github.com/sahibjotsaggu/San-Francisco-Pro-Fonts-->
    <!-- android API 26+ -> android:fontStyle     16+ -> app:fontStyle -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/montserrat_medium"

        app:fontStyle="normal"
        app:fontWeight="500"
        app:font="@font/montserrat_medium"/>

    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/montserrat"

        app:fontStyle="normal"
        app:fontWeight="500"
        app:font="@font/montserrat"/>

    <!-- android API 26+ -> android:fontStyle     16+ -> app:fontStyle -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/montserrat_bold"

        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/montserrat_bold"/>


    <!-- android API 26+ -> android:fontStyle     16+ -> app:fontStyle -->
    <font
        android:fontStyle="normal"
        android:fontWeight="600"
        android:font="@font/montserrat_semibold"

        app:fontStyle="normal"
        app:fontWeight="600"
        app:font="@font/montserrat_semibold"/>

    <!-- android API 26+ -> android:fontStyle     16+ -> app:fontStyle -->
    <font
        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/montserrat_bold"

        app:fontStyle="italic"
        app:fontWeight="700"
        app:font="@font/montserrat_bold"/>
</font-family>