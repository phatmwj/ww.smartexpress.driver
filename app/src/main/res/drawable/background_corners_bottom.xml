<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White bottom color -->
    <item>

        <shape  android:shape="rectangle">
            <solid android:color="#EFF8EA" />
            <corners android:bottomLeftRadius="@dimen/_10sdp"
                android:bottomRightRadius="@dimen/_10sdp"/>
        </shape>

    </item>
    <!-- Bottom 2dp Shadow -->
    <item  android:top="1dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape  android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/_10sdp"
                android:bottomRightRadius="@dimen/_10sdp"/>
        </shape>
    </item>
</layer-list>