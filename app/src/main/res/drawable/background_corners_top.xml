<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- White Top color -->
    <item>

        <shape  android:shape="rectangle">
            <solid android:color="#EFF8EA" />
            <corners android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp"/>
        </shape>

    </item>
    <!-- Bottom 2dp Shadow -->
    <item  android:top="2dp" android:end="2dp" android:bottom="1dp" android:start="2dp">
        <shape  android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="@dimen/_10sdp"/>
        </shape>
    </item>
</layer-list>