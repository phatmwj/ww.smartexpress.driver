<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="a"
            type="ww.smartexpress.driver.ui.bank.BankActivity" />
        <variable
            name="vm"
            type="ww.smartexpress.driver.ui.bank.BankViewModel" />
        <import type="android.view.View"/>
        <import type="ww.smartexpress.driver.utils.NumberUtils"/>
        <import type="android.text.TextUtils"></import>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:onClick="@{()->vm.back()}"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingRight="@dimen/_20ssp"
                android:src="@drawable/ic_icon_back">

            </ImageView>

            <TextView
                android:id="@+id/textView10"
                style="@style/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Tài khoản ngân hàng">

            </TextView>
        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:onClick="@{()->a.hideKeyboard()}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/layoutButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
            app:layout_constraintVertical_bias="0.0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên ngân hàng"
                        style="@style/montserrat_medium_gray_12ssp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required_star"
                        android:textColor="@color/red_color">

                    </TextView>
                </LinearLayout>

                <EditText
                    style="@style/information_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_edt"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:hint="Ngân hàng"
                    android:inputType="text"
                    android:maxLines="1"
                    android:onClick="@{()->vm.getBankList()}"
                    android:text="@{vm.bank.name}"
                    android:textColorHint="@color/grey_text">

                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        style="@style/montserrat_medium_gray_12ssp">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/bg_edt"
                    android:hint="@string/email_hint"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""
                    android:textColorHint="@color/grey_text"
                    style="@style/information_edit_text"
                    android:visibility="gone">

                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số tài khoản"
                        style="@style/montserrat_medium_gray_12ssp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required_star"
                        android:textColor="@color/red_color">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:id="@+id/edtAccountNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_edt"
                    android:hint="Nhập số tài khoản"
                    android:inputType="number"
                    android:maxLines="1"
                    android:text="@={vm.accountNumber}"
                    android:textColorHint="@color/grey_text"
                    style="@style/information_edit_text">

                </EditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên chủ tài khoản"
                        style="@style/montserrat_medium_gray_12ssp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required_star"
                        android:textColor="@color/red_color">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:onClick="@{()->a.hideKeyboard()}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_edt"
                    android:hint="Chủ tài khoản"
                    android:inputType="none"
                    android:focusable="false"
                    android:maxLines="1"
                    android:text="@{vm.accountName.accountName}"
                    android:textColorHint="@color/grey_text"
                    style="@style/information_edit_text">

                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi nhánh"
                        style="@style/montserrat_medium_gray_12ssp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required_star"
                        android:textColor="@color/red_color">

                    </TextView>

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/bg_edt"
                    android:hint="Nhập chi nhánh"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="@={vm.brand}"
                    android:textColorHint="@color/grey_text"
                    style="@style/information_edit_text">

                </EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        style="@style/montserrat_medium_gray_12ssp">

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/required_star"
                        android:textColor="@color/red_color">

                    </TextView>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">

                    <EditText
                        android:id="@+id/edtPw"
                        style="@style/information_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edt"
                        android:hint="@string/pw_input"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingRight="@dimen/_35sdp"
                        android:text="@={vm.password}"
                        android:textColorHint="@color/grey_text">

                    </EditText>

                    <ImageView
                        android:onClick="@{(v)->vm.setIsVisibilityPassword()}"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@{vm.isVisibility ? @drawable/ic_icon_visibility_off : @drawable/ic_icon_visibility}">

                    </ImageView>
                </FrameLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="bottom">
            <Button
                android:enabled="@{vm.brand != null &amp;&amp; vm.accountNumber != null &amp;&amp; vm.password!= null? Boolean.TRUE:Boolean.FALSE}"
                android:onClick="@{()->vm.updateBankAccount()}"
                android:id="@+id/btnEPUpdate"
                style="@style/AppButtonStyle"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu">

            </Button>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>