<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ivm"
            type="ww.smartexpress.driver.data.model.api.response.Booking" />
        <import type="ww.smartexpress.driver.utils.NumberUtils"></import>
        <import type="ww.smartexpress.driver.utils.DateUtils"></import>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp">

        <LinearLayout
            android:background="@drawable/bg_green_light_elevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    style="@style/small_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{DateUtils.dateFormat(ivm.createdDate)}"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="1">

                </TextView>
                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/roboto_medium_black_11ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@{NumberUtils.formatCurrency(ivm.money)}"
                        android:maxLines="1"
                        android:ellipsize="end">

                    </TextView>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="end">

                    <LinearLayout
                        android:layout_width="@dimen/_5sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@{ivm.state == 300 ? @drawable/item_circle_dot_green : ivm.state== -100 ? @drawable/item_circle_dot_red: @drawable/item_circle_dot_yellow}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        style="@style/roboto_medium_black_11ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@{ivm.state == 300 ? @string/completed : ivm.state == -100? @string/canceled : @string/processing}"
                        android:textColor="@{ivm.state == 300 ? @color/green : ivm.state == -100 ? @color/cancel_color: @color/yellow}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </TextView>
                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_10sdp"
                    android:src="@drawable/ic_icon_destination">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/roboto_medium_gray_11ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@{ivm.pickupAddress}" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/_5sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/line_dashed_border">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_21sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/location_flag">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/roboto_medium_gray_11ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@{ivm.destinationAddress}" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/roboto_medium_black_8ssp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:maxLines="1"
                android:text="@{ivm.service.name}" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>